extends layout
block content
	a(href='/home') Back
	center
		h1= groupName
		p #{emailList}
		-var addPath = '/add/' + groupName
		-var deletePath = '/delete/' + groupName
		-var nukePath = '/nukeGroup/' + groupName
		form(action=''+addPath, method = 'post')
			center
				h3 Add Member
				input(type='text', name='newEmail', placeholder='Add Email')
				br
				button(type='submit', value='Submit') Add Newbie
				br
		form(action=''+deletePath, method = 'post')
			center
				h3 Delete Member
				input(type='text', name='email', placeholder='Delete Email')
				br
				button(type='submit', value='Submit') Remove User
				br
		form(action=''+nukePath, method = 'post')
			center
				h3 Nuke This Group
				button(type='submit', value='Submit') Remove Group Forever
				br